#!/bin/sh

# Taken from TJ's commander tests
# https://github.com/visionmedia/commander.js/blob/master/test/run

export NODE_ENV=test

echo
for file in $@; do
  printf "\033[90m   ${file#test/}\033[0m "
  node $file 2> /tmp/stderr && echo "\033[36m✓\033[0m"
  code=$?
  if test $code -ne 0; then
    echo "\033[31m✖\033[0m"
    cat /tmp/stderr >&2
    exit $code
  fi
done
echo